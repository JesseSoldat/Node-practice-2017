<body>
	<% include partials/nav.ejs %>

	<h1>Contact Us</h1>
	<p>For all your questions contact jlab@gmail.com</p>
	<p><%= qs.dept %></p>
	<!-- <p><%= qs.name %></p> -->

	<form id="contact-form" method="POST" action="/contact">
		<label for="who">Who do you want to contact?</label>
		<br>
		<input type="text" name="who" value="<%= qs.name %>" required>
		<br>
		<label for="department">Which department?</label>
		<br>
		<input type="text" name="department" value="<%= qs.dept %>" required>
		<br>
		<label for="email">Your email</label>
		<br>
		<input type="email" name="email">
		<br>
		<label>Rate Us</label>
		<select name='rating'>
		  <option value="great">GREAT</option>
		  <option value="good">GOOD</option>
		  <option value="fair">FAIR</option>
		  <option value="poor">POOR</option>
		</select>
		<input type="submit" value="submit">
	</form>


